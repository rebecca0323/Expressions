<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Song">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fade"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="393dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/appname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <VideoView
        android:id="@+id/imageView14"
        android:layout_width="220dp"
        android:layout_height="340dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/imageView12"
        android:layout_marginTop="75dp"/>

    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/imageView14"
        android:layout_marginTop="355dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="Replace this" />

    <SeekBar
        android:id="@+id/song_progress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/song_name"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="40dp"
        android:thumbTint="#000"/>

    <ImageView
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pause"
        android:layout_alignTop="@id/song_progress"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="pause"/>

    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/play_but"
        android:layout_alignTop="@id/song_progress"
        android:visibility="invisible"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="pause"/>

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/song_progress"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/pause"
        android:paddingLeft="100dp"
        app:srcCompat="@drawable/ic_skip_next_black_24dp" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/song_progress"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@id/pause"
        android:paddingRight="100dp"
        app:srcCompat="@drawable/ic_skip_previous_black_24dp" />

</RelativeLayout>