<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Song">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fade"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="393dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/appname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sk"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/imageView12"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/imageView14"
        android:layout_marginTop="400dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="Replace this" />

    <SeekBar
        android:id="@+id/song_progress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/song_name"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="40dp"
        android:thumbTint="#000"/>
</RelativeLayout>